{% extends 'default/index.html.twig'%}
{% block book %}

    <div class="clear2"><q></q></div>



    <div class="book-description">
        <div class="admin_options">

            <a href="{{ path('edit_book', {id: books.id}) }}" class="btn btn-sm btn-default">
                <i class="fa fa-eye" aria-hidden="true"></i> UREDI
            </a>
            <a href="{{ path('remove_book', {id: books.id}) }}" class="btn btn-sm btn-default">
                <i class="fa fa-eye" aria-hidden="true"></i> UKLONI
            </a>
        </div>

        <img class="cover-img cov-des" src="{{ asset('uploads/images/'~books.image) }}">

        <ul class=" det-list list-group">
            <li class="det-atr list-group-item">Naslov: {{ books.title }}</li>
            <li class="det-atr list-group-item">Autori: {% for author in books.authors %} {{author.name ~ ' ' ~ author.surname}}{% endfor %}</li>
            <li class="det-atr list-group-item">Žanr: {{ books.genre.genre }}</li>
            <li class="det-atr list-group-item">Izdavač: {{ books.publisher.publisher }}</li>
            <li class="det-atr list-group-item">Datum izdavanja: {{ books.publicationDate }}</li>
            <li class="det-atr list-group-item">Broj stranica: {{ books.pages }}</li>
            <li class="det-atr list-group-item">Cijena: {{ books.price }},00kn</li>
            {% if books.actionPrice is not null %}
                <li class="det-atr list-group-item">Akcijska cijena: {{ books.actionPrice }},00 kn</li>
            {% endif %}
            <li class="det-atr list-group-item">Opis: {{ books.description }}</li>
        </ul>

    </div>
    <div class="clear"></div>

    <footer id="contact" class="container">


        <address>
            <div id="podaci1">
                <h3>KONTAKT:</h3>
                <strong>vlasnik: XY</strong><br>
                SD Cvjetno Naselje<br>
                Zagreb,10000<br>
                HRrvacka<br>

            </div>
            <div id="podaci2">
                Tel.+385 xx xxx xxxx<br>
                e-mail adresa:
                <a class="mailadr" href="" data-toggle="modal" data-target="#adrModal">knjizara_Libra@gmail.com</a>
            </div>
            <div id="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6078.007778486055!2d15.607762052003713!3d44.03301212627366!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4761da54782e6f15%3A0x9037d2b410c8020e!2s23420%2C+Benkovac!5e0!3m2!1shr!2shr!4v1504043099884" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

            </div>
        </address>


    </footer>
    <footer id="cr">&#169;bk-library team</footer>
    </div>

    <div class="modal fade" id="adrModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">OSTAVITE KOMENTAR</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body panel-body">
                    <form action="{{ path('mail') }}" method="post">
                        E-mail:
                        <input type="email" name="email">
                        Komentar:
                        <textarea rows="4" cols="50" name="comment">Pozdrav, zainteresiran sam za naslov [{{ books.title }}]
                      </textarea>
                        <input type="submit">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}





